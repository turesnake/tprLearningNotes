{
    "workbench.colorTheme": "Dracula Soft",
    
    // 暂且留个记录
    
    "workbench.colorCustomizations": {

        // ================================ 顶部区域 ============================================= //

        // ----- 标题栏 (最顶部, "文件","编辑" 那一行) -----:
        "titleBar.activeBackground":"#262729c4",
        "titleBar.activeForeground":"#a1a1a1",//文字颜色

        "menu.background":"#333538fb",// 点击 "文件" 弹出的菜单的底色


        // ----- 活动选项卡 (顶部) -----:
        "tab.inactiveForeground":"#dfdfdf",// 普通选项卡 文字颜色
        "tab.inactiveBackground":"#262729c4",

        "tab.hoverBackground":"#21242b",// 鼠标悬停卡 背景色

        "tab.activeForeground":"#ffe261",//被选中的选项卡 文字颜色
        "tab.activeBackground":"#191a1b",//被选中的选项卡 背景色

        "tab.border":"#555555",// 两个选项卡之间的 分界线的颜色


        // ----- 路径导航栏 (顶部) -----:
        "breadcrumb.foreground":"#868686",//路径文字颜色
        "breadcrumb.background":"#191b1f",//路径背景颜色


        // ================================ 底部区域 ============================================= //

        // ----- 状态栏 (最底部) -----:
        "statusBar.background":"#1c1d20c4",
        "statusBar.foreground":"#a1a1a1",


        // ================================ 左侧区域 ============================================= //

        // ----- 活动栏 (最左侧) -----:
        "activityBar.background":"#232427",//活动栏背景色


        // ----- 侧边栏 (左侧, 放文件的区域) -----:
        "sideBar.background":"#1c1d20",//背景颜色
        "sideBar.foreground":"#b1b1b1",//文字颜色

        "list.hoverBackground":"#525252",// 鼠标悬停的那一行的背景色

        "list.activeSelectionForeground":"#ffffff",// 鼠标点选行(文件)的字体颜色
        "list.activeSelectionBackground":"#525252",// 鼠标点选行(文件)的背景色

        "list.errorForeground":"#ff4444",// 如果某个文件中存在错误, 这个文件文字, 以及顶部选项卡文字 的颜色
        

        // ================================ 代码编辑器区域 ============================================= //

        // ----- 代码编辑器 -----:
        "editor.background": "#262729c4",// 编辑区背景色
        "editor.foreground":"#e9e9e9",// 编辑区 普通文字 前景色, 最好设置
        //"editor.background": "#303235"// 编辑区背景色

        
        "editorLineNumber.foreground":"#929292",//行号(左侧)颜色
        "editorOverviewRuler.background":"#1b1c1dc4",//右侧滚动条背景色

        // ----- 编辑器内查找 -----:
        "editor.selectionBackground":"#025a31",//鼠标拖动选择文字的底色

        //"editor.selectionForeground":"#ff0000",

        "editor.selectionHighlightBackground":"#025a31",//"与所选内容具有相同内容的区域" 的背景色
        "editor.selectionHighlightBorder":"#ffd000",//"与所选内容具有相同内容的区域" 的边框色

        "editor.findMatchHighlightBackground":"#025a31",//查找到的文字区域的底色
        "editor.findMatchHighlightBorder":"#ffd000",


        //"selection.background":"#ff0000"// 右上角查找窗口中, 选择的字体的背景色
        //"editor.inactiveSelectionBackground":"#ff0000",
        //"editor.rangeHighlightBackground":"#ff0000",
        //"editor.findMatchBackground":"#00ff00",
        //"editor.findRangeHighlightBackground":"#00ff0d",

        // ----- 右侧小视图 (缩略图) -----:
        "minimap.background":"#202224ef",


        // ----- 搜索文件内查找 -----:
        "searchEditor.findMatchBackground":"#107719",//在搜索文件中, 匹配文字的底色


        // ----- 缩进参考线 -----:
        "editorIndentGuide.activeBackground":"#4b7f8894",// 当前所在代码块的 参考线颜色
        //"editorIndentGuide.background":"#ff0000",// 默认缩进线颜色 (不设置)
        //"tree.indentGuidesStroke":"#ff0000",//左侧文件区, 内的缩进线颜色 (不设置)

        // ----- 选中的括号 (大中小括号都算) -----:
        "editorBracketMatch.background":"#2a5568",//括号底色
        "editorBracketMatch.border":"#ffee00",// 括号边框
        //"editorOverviewRuler.bracketMatchForeground":"#ff0000",


        
        // ----- 错误,警告 -----:
        "editorError.foreground":"#ff3d3d", //语法错误代码波浪线颜色
        "editorWarning.foreground":"#ffee00", // 有警告的代码波浪线颜色

        "editorOverviewRuler.errorForeground":"#ff3d3d",//语法错误代码在滚动条高亮显示
        "editorOverviewRuler.warningForeground":"#e48c00",//有警告的代码在滚动条高亮显示
        
    
    },
    
    

    
