    "editor.tokenColorCustomizations": {
        
        // 配色原则:
        // 注释类型的尽可能偏向 黄,
        // 正文部分尽可能偏向 绿-青-紫

        "comments": "#838a48", // 注释 黄2
        
        //"keywords": "#80f6ff", // 关键字
	    //"variables": "#e9e9e9", // 变量名
	    //"strings": "#72ade4", // 字符串
	    //"functions": "#b2f11c", // 函数名
	    //"numbers": "#6cc0a4", // 数字
        //"types": "#f1d950",
        
    
        "textMateRules": [
            
            {
                "scope": [
                    // <param name="XXX"> 中的 "param" 
                    "entity.name.tag"
                ],
                "settings": {
                    "foreground": "#8d6700",
                    "fontStyle": "italic"
                }
            },

            {
                "scope": [
                    // <param name="XXX"> 中的 "name"
                    "entity.other.attribute-name"
                ],
                "settings": {
                    "foreground": "#cfbf29",
                }
            },

            {
                "scope": [
                    // 借用[dracula]: "Function parameters":
                    "entity.name.variable.parameter",
                    "meta.at-rule.function variable",
                    "meta.at-rule.mixin variable",
                    "meta.function.arguments variable.other.php",
                    "meta.selectionset.graphql meta.arguments.graphql variable.arguments.graphql",
                    "variable.parameter"
                ],
                "settings": {
                    "foreground": "#a19cee",
                }
            },

            {
                "scope": [
                    // 借用[dracula]: 模板参数类型 T
                    "entity.name.type.type-parameter",
                    "meta.indexer.mappedtype.declaration entity.name.type",
                    "meta.type.parameters entity.name.type"
                ],
                "settings": {
                    "foreground": "#a19cee",
                }
            },

            {
                "scope": [
                    // string
                    "string",
                    // string 两侧的双引号
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end"
                ],
                "settings": {
                    "foreground": "#dee492",
                    //"fontStyle": "bold"
                }
            },

        
            {
                "scope": [
                    // 修饰符: public internal private static const override readonly sealed
                    "storage.modifier"
                ],
                "settings": {
                    "foreground": "#c148d1",
                    //"fontStyle": "bold"
                }
            },

            
            

        ],
        

    },
    


    "editor.minimap.enabled": false,
    "git.ignoreMissingGitWarning": true,
    "editor.codeLensFontSize": 2,
    "extensions.ignoreRecommendations": true,
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open" // 关闭 右侧缩略图
    
    
    
    
    
    
    
}